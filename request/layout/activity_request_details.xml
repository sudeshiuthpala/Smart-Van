            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Child Location(Area):"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
