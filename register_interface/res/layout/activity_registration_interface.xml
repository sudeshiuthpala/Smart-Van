<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".RegistrationInterface">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="188dp"
        android:layout_marginTop="65dp"
        android:text="@string/smartvan"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="189dp"
        android:layout_marginTop="109dp"
        android:text="@string/school_van_management_system" />

    <LinearLayout
        android:layout_width="319dp"
        android:layout_height="554dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="192dp"
        android:elevation="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER NOW"
            android:textColor="#E103F9"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AS"
            android:textColor="#E103F9"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="130dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="305dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="10dp">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ico" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="129dp"
                android:layout_height="63dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="40dp"
                android:text="Van Owner Registration"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="305dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="10dp">


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/parent_2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="129dp"
                android:layout_height="63dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="40dp"
                android:text="Parent Registration"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="118dp"
        android:layout_height="111dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="51dp"
        app:srcCompat="@drawable/smartvan" />


</RelativeLayout>